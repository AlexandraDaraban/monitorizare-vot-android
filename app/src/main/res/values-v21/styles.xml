<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Common">
        <item name="android:windowActivityTransitions">true</item>
        <!--<item name="android:windowSharedElementEnterTransition">@transition/login_transform</item>-->
        <!--<item name="android:windowSharedElementExitTransition">@transition/login_transform</item>-->
        <item name="android:windowEnterTransition">@transition/fade_in</item>
        <item name="android:windowExitTransition">@transition/fade_out</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme.Login.Common">
        <item name="android:colorControlNormal">@color/textLight</item>
        <item name="android:colorControlActivated">@color/accent</item>
        <item name="android:colorControlHighlight">@color/accent</item>
    </style>

    <style name="BaseButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonLogin" parent="BaseButton">
        <item name="android:colorButtonNormal">@color/accent</item>
        <item name="android:colorAccent">@color/accentLight</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="buttonDark" parent="BaseButton">
        <item name="android:colorButtonNormal">@color/backgroundDark</item>
        <item name="android:colorAccent">@color/backgroundAccent</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="buttonLight" parent="BaseButton">
        <item name="android:colorButtonNormal">@color/backgroundLight</item>
        <item name="android:colorAccent">@color/backgroundAccent</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="buttonEmbedded" parent="BaseButton">
        <item name="android:colorButtonNormal">@color/backgroundDark</item>
        <item name="android:colorAccent">@color/backgroundDark</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">@dimen/button_text_embedded</item>
    </style>

    <style name="SharedElementLoginBackground">
        <item name="android:background">@color/primary</item>
        <item name="android:transitionName">@string/shared_element_login_background</item>
    </style>

    <style name="InputLogin" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:background">@drawable/background_input_login</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/login_margin_input</item>
        <item name="android:layout_marginRight">@dimen/login_margin_input</item>
        <item name="android:textSize">@dimen/login_text_size</item>
    </style>
</resources>