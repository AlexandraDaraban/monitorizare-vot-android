<resources>

    <style name="AppTheme.Common" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Common">
        <!-- Can be overriden in values-v16 and values-v21 -->
    </style>

    <style name="AppTheme.Login.Common" parent="AppTheme">

    </style>

    <style name="AppTheme.Login" parent="AppTheme.Login.Common">
        <!-- Can be overriden in values-v16 and values-v21 -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BaseButton.Common">

    </style>
    <style name="BaseButton" parent="BaseButton.Common">
        <!-- Can be overriden in values-v16 and values-v21 -->
    </style>

    <!-- Overridden in values-v21 -->
    <style name="SharedElementLoginBackground" />
    <style name="SharedElementLogo"/>

    <style name="label">
        <item name="android:textSize">@dimen/label_text</item>
        <item name="android:paddingTop">@dimen/label_top_spacing</item>
        <item name="android:paddingBottom">@dimen/label_bottom_spacing</item>
    </style>
</resources>
